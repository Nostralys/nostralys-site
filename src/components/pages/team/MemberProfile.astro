---
import { Image } from "astro:assets";

const { imageSrc, name, description, class: className } = Astro.props;
---

<div class:list={["flex flex-col items-center", className]}>
  <Image src={imageSrc} alt="CEO" class="rounded-full" />
  <h2 class="text-xl font-semibold text-gray-950">{name}</h2>
  <p class="text-gray-600 -mt-3">{description}</p>
</div>
