---
interface Classes {
  root?: string;
  middle?: string;
}

interface Props {
  classes?: Classes;
}

const { classes } = Astro.props;
---

<section class:list={["flex items-center", classes?.root]}>
  <div class="bg-stone-bevel-left w-8 h-full bg-no-repeat translate-x-3.5">
  </div>

  <div class:list={["bg-stone-bevel-middle h-full", classes?.middle]}>
    <slot />
  </div>

  <div class="bg-stone-bevel-right w-8 h-full bg-no-repeat -translate-x-0.5">
  </div>
</section>
