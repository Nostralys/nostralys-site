---
import { Image } from "astro:assets";
import StoneBevelContainer from "../StoneBevelContainer.astro";

const { class: className, slug, post } = Astro.props;
---

<article
  class:list={["h-2/3 basis-1/3 bg-white relative flex flex-col", className]}
>
  <Image
    src={post.image.src}
    alt={post.image.alt}
    class="w-full h-1/2 object-cover"
    width="500"
    height="500"
  />

  <div class="flex flex-col gap-4 p-2 grow">
    <h1 class="">{post.title}</h1>

    <h3 class="">
      {
        post.publishDate.toLocaleDateString("fr-FR", {
          day: "numeric",
          month: "long",
          year: "numeric",
        })
      }
    </h3>

    <p class="h-2/4">{post.description}</p>
  </div>

  <div class="absolute bottom-0 left-1/2 translate-y-1/2 -translate-x-1/2">
    <StoneBevelContainer class="h-12">
      <a class="text-white px-4" href={`/news/${slug}`}>Voir plus</a>
    </StoneBevelContainer>
  </div>
</article>
