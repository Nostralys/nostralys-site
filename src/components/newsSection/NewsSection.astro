---
import { getCollection } from "astro:content";

import NewsCard from "./NewsCard.astro";

const posts = (await getCollection("news")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<section
  id="pitch-section"
  class="h-screen py-12 md:py-28 px-4 flex flex-col md:flex-row justify-center items-center gap-8 bg-cover bg-[url('/images/backgrounds/campfire-sky.jpeg')]"
>
  {
    posts.map((post) => (
      <NewsCard classes={{ root: "max-w-80" }} id={post.id} post={post.data} />
    ))
  }
</section>
